generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id              String            @id
  orderNumber     String            @unique
  totalValue      Int
  status          String
  reason          String?
  createdAt       DateTime
  PaymentClient   PaymentClient[]
  PaymentProducts PaymentProducts[]

  @@map("payments")
}

model PaymentProducts {
  id          String   @id
  payment     Payment  @relation(fields: [paymentId], references: [id])
  paymentId   String
  name        String
  category    String
  description String
  price       Int
  image       String?
  createdAt   DateTime
  updatedAt   DateTime

  @@map("payment_products")
}

model PaymentClient {
  id         String   @id
  payment    Payment? @relation(fields: [paymentId], references: [id])
  paymentId  String
  identifier String
  name       String
  cpf        String
  email      String
  createdAt  DateTime
  updatedAt  DateTime

  @@map("payment_client")
}

model PublishedMessages {
  id        String   @id
  queue     String
  origin    String
  message   String   @db.Text
  createdAt DateTime

  @@map("published_messages")
}
